<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/basicinfo_back"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back_deepblue"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@+id/basicinfo_back"
            android:layout_alignTop="@+id/basicinfo_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="请逐项填写巡检记录单"
            android:textStyle="bold"
            android:textColor="#353535"
            android:textSize="18sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="#dbdbdb" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="系统维护保养巡检记录表"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_item_height">
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/red"
                    android:text="@string/necessary_add"/>
                <TextView
                    android:layout_width="@dimen/invoice_item_add_text_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="点位名称"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <EditText
                    android:id="@+id/invoice_detail_tv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:hint="请填写点位名称"
                    android:paddingLeft="5dp"
                    android:text="16sp"
                    android:background="@drawable/shape_corner"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_item_height">
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/red"
                    android:text="@string/necessary_add"/>
                <TextView
                    android:layout_width="@dimen/invoice_item_add_text_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="点位地址"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <EditText
                    android:id="@+id/invoice_detail_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请填写点位地址"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="16sp"
                    android:background="@drawable/shape_corner"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_item_height">
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/red"
                    android:text="@string/necessary_add"/>
                <TextView
                    android:layout_width="@dimen/invoice_item_add_text_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="巡检单位"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/invoice_detail_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/shape_corner_gray"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="北京乐享服务有限公司"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="设备统计"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="此项填入用户在该点位的设备类型及数量" />
            <LinearLayout
                android:id="@+id/asset_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >

            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="常规巡检详情"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="此项逐项填入巡检项情况及处理结果" />
            <LinearLayout
                android:id="@+id/inspection_detail_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="确认内容"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdbdb" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_item_height">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/red"
                    android:text="@string/necessary_add"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_centerVertical="true"
                    android:text="巡检\n结论"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/invoice_detail_confirm1"
                    android:layout_width="0dp"
                    android:layout_weight="12"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:textSize="14sp"
                    android:hint="请填写巡检结论"
                    android:paddingLeft="3dp"
                    android:background="@drawable/shape_corner"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/red"
                    android:text="@string/necessary_add"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_centerVertical="true"
                    android:text="巡检\n日期"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/invoice_detail_confirm2"
                    android:layout_width="0dp"
                    android:layout_weight="12"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_corner"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_item_height">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/red"
                   />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_centerVertical="true"
                    android:text="用户\n确认"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/invoice_detail_confirm3"
                    android:layout_width="0dp"
                    android:layout_weight="12"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:textSize="14sp"
                    android:hint="用户确认"
                    android:background="@drawable/shape_corner_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/red"
                    android:text="@string/necessary_add"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_centerVertical="true"
                    android:text="维修\n工"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/invoice_detail_confirm4"
                    android:layout_width="0dp"
                    android:layout_weight="12"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_corner_gray"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/setting_item_selector"
        android:layout_gravity="center_vertical"
        android:layout_margin="3dp"
        >
        <Button
            android:id="@+id/invoice_detail_bt"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@color/deep_blue"
            android:layout_centerVertical="true"
            android:text="提交"
            android:textColor="@color/state_selected"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#dbdbdb" />
    </RelativeLayout>
</LinearLayout>