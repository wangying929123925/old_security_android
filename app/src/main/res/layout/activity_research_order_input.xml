<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <include layout="@layout/search_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:background="@color/state_selected"
        android:padding="5dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <Button
                android:id="@+id/search_order_project_type"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_selector"
                android:text="项目类型"
                android:layout_marginRight="20dp"
                android:focusableInTouchMode="true"
                >

            </Button>
            <Button
            android:id="@+id/search_order_type"
            android:layout_width="100dp"
            android:layout_height="35dp"
                android:background="@drawable/button_selector"
            android:text="工单类型"
            android:layout_marginRight="20dp"/>
            <Button
                android:id="@+id/search_order_unit_type"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_selector"
                android:text="维修单位"
                android:layout_marginRight="20dp"/>
            <Button
                android:id="@+id/search_order_date"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_selector"
                android:text="项目日期"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <include layout="@layout/layout_search_result"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_search_order_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scrollbars="none" />
    </FrameLayout>
</LinearLayout>