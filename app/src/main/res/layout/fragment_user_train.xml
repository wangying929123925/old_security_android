<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/state_selected"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/knowledge_base_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_message_system"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/knowledge_base"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/knowledge_base_img"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="知识库"
            android:textColor="@color/black"
            android:textSize="26sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#dbdbdb" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/state_selected"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/train_identification_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_message_system"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/train_identification"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/train_identification_img"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="培训认证"
            android:textColor="@color/black"
            android:textSize="26sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_right"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#dbdbdb" />
    </RelativeLayout>
</LinearLayout>