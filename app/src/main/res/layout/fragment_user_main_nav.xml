<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    >
    <LinearLayout
        android:id="@+id/main_repair"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@drawable/shape_corner_bluewidge_19">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <View
            android:layout_width="5dp"
            android:layout_height="25dp"
            android:background="@color/deep_blue"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/repair_item_title"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="维修"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/main_repair_all"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:text="查看全部工单 >"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/state_pressed"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:padding="3dp"
            >
        <RelativeLayout
            android:id="@+id/main_repair_1"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            >
                <ImageView
                    android:id="@+id/main_repair_img1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:src="@drawable/ic_workorder"
                    android:focusable="false"
                    android:scaleType="fitXY"
                    android:clickable="false"/>
            <TextView
                android:id="@+id/main_order_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_repair_img1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:clickable="false"
                android:text="新建报修"
                android:textColor="@color/black"
                android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:padding="3dp"
            >
            <RelativeLayout
                android:id="@+id/main_repair_2"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/main_repair_img2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:src="@drawable/ic_device"
                    android:focusable="false"
                    android:clickable="false"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/main_order_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_repair_img2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="新建报修"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:clickable="false"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:padding="3dp"
            >
            <RelativeLayout
                android:id="@+id/main_repair_3"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                >
