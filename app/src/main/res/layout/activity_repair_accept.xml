<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include  android:id="@+id/layout_bar" layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            >
            <ImageView
                android:id="@+id/basicinfo_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_board_normal"
                />
            <TextView
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/basicinfo_icon"
                android:layout_alignTop="@+id/basicinfo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="报修信息"
                android:textStyle="bold"
                android:textColor="#353535"
                android:textSize="18sp"
                />
            <TextView
               android:id="@+id/repair_accept_id"
                android:layout_alignTop="@+id/basicinfo_icon"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#353535"
                android:textSize="18sp"
                tools:text="报修单号：191011"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="设      备"
                android:textColor="#353535"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/repair_accept_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="100dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp"
                tools:text="悬挂式桥梁起重机"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="编      号"
                android:textColor="#353535"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/repair_accept_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="100dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp"
                tools:text="211-002"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="描      述"
                android:textColor="#353535"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/repair_accept_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="100dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp"
                tools:text="损坏"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="巡检人 "
                android:textColor="#353535"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/repair_accept_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="100dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp"
                tools:text="张三"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="巡检时间"
                android:textColor="#353535"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/repair_accept_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="100dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp"
                tools:text="2019-10-17 20:45"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
        <Button
            android:id="@+id/i_accept"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_corner_large"
            android:text="我来受理"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/i_assign"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_corner_large"
            android:text="我来派遣"
            android:textSize="25dp"
            />
    </LinearLayout>
</LinearLayout>