<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_corner_bluewidge_19">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/order_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:text="中国邮政储蓄银行北京邮电大学支行"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/state_selected"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        >
     <ImageView
         android:id="@+id/order_item_img"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_marginLeft="10dp"
         android:layout_marginRight="20dp"
       android:src="@drawable/ic_workorder"
    />
        <TextView
            android:textSize="14sp"
            android:layout_toRightOf="@+id/order_item_img"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:text="单据编号:"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/order_item_id"
            android:layout_toRightOf="@+id/order_item_img"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            tools:text="000000000001"
            />
        <TextView
            android:textSize="14sp"
            android:layout_toRightOf="@+id/order_item_img"
            android:layout_below="@+id/order_item_id"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:text="合同编号："/>

        <TextView
            android:textSize="14sp"
            android:id="@+id/order_item_name"
            android:layout_toRightOf="@+id/order_item_img"
            android:layout_below="@+id/order_item_id"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="80dp"
            tools:text="ATM机维修"/>
        <TextView
            android:textSize="14sp"
            android:layout_below="@+id/order_item_name"
            android:layout_toRightOf="@+id/order_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="报修时间："/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/order_item_time"
            android:layout_toRightOf="@+id/order_item_img"
            android:layout_below="@+id/order_item_name"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="80dp"
            tools:text="2019-11-14 17:21:40"/>
        <TextView
            android:id="@+id/order_item_details"
            android:textSize="14sp"
            android:layout_below="@+id/order_item_status"
            android:layout_toRightOf="@+id/order_item_img"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:text="单据详情 >>>"
            android:textColor="@color/bright_yellow"/>
        <TextView
            android:textSize="14sp"
            android:layout_below="@+id/order_item_time"
            android:layout_toRightOf="@+id/order_item_img"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:text="单据状态："/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/order_item_status"
            android:layout_toRightOf="@+id/order_item_img"
            android:layout_below="@+id/order_item_time"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="80dp"
            tools:text="待接单"/>
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/relative_button"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:focusable="true"
    android:visibility="gone"
    >
    <Button
        android:id="@+id/order_item_button2"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_selector"
        android:text="我接受了"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/order_item_button1"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/order_item_button2"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_selector"
        android:text="我拒绝"
        android:textColor="@color/black"
        />
</RelativeLayout>
</LinearLayout>