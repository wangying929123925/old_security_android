<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
<include layout="@layout/search_title"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:background="@color/state_selected"
        android:padding="5dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <Button
                android:id="@+id/search_order_project_type"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_selector"
                android:text="项目类型"
                android:layout_marginRight="20dp"
                android:focusableInTouchMode="true"
                >

            </Button>
            <Button
                android:id="@+id/search_order_type"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_selector"
                android:text="工单类型"
                android:layout_marginRight="20dp"/>
            <Button
                android:id="@+id/search_order_unit_type"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_selector"
                android:text="维修单位"
                android:layout_marginRight="20dp"/>
            <Button
                android:id="@+id/search_order_date"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_selector"
                android:text="项目日期"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </HorizontalScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:layout_marginTop="1dp">
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"/>
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"/>
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_all"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"/>
</LinearLayout>
  <include layout="@layout/research_order_display"/>
</LinearLayout>