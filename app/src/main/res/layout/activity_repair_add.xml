<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            >
            <ImageView
                android:id="@+id/basicinfo_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_board_normal"
                />
            <TextView
                android:layout_toRightOf="@+id/basicinfo_icon"
                android:layout_alignTop="@+id/basicinfo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="请填写报修信息"
                android:textStyle="bold"
                android:textColor="#353535"
                android:textSize="18sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="报修单号"
                android:textColor="#353535"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_repair_listid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="新建报修单编号"
                android:maxLength="11"
                android:paddingLeft="120dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="报修时间"
                android:textColor="#353535"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_repair_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="填写报修时间"
                android:maxLength="11"
                android:paddingLeft="120dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="故障类型"
                android:textColor="#353535"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/et_fault_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请选择故障类型"
                android:paddingLeft="120dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/choose_fault_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="请选择"
                android:textColor="#1A73C0"
                android:textSize="18sp"
                android:drawableRight="@drawable/ic_right"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/setting_item_selector"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="故障位置"
            android:textColor="#353535"
            android:textSize="18sp" />

            <TextView
                android:id="@+id/et_fault_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请选择故障位置"
                android:paddingLeft="120dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/choose_fault_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="请选择"
                android:textColor="#1A73C0"
                android:textSize="18sp"
                android:drawableRight="@drawable/ic_right"/>

            <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#dbdbdb" />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="故障名称"
                android:textColor="#353535"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/et_fault_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请选择故障名称"
                android:maxLength="11"
                android:paddingLeft="120dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/choose_fault_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="请选择"
                android:textColor="#1A73C0"
                android:textSize="18sp"
                android:drawableRight="@drawable/ic_right"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="故障描述"
                android:textColor="#353535"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/et_fault_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请对缺陷情况进行适当描述"
                android:paddingLeft="120dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/setting_item_selector"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="拍  照"
                android:textColor="#353535"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/et_fault_photo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_photo"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#dbdbdb" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/repair_add_confirm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_corner_large"
        android:text="确定"
        android:textSize="25dp"/>
</LinearLayout>