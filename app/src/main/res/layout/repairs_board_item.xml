<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#ffeeeeee"
        android:padding="10dp">
     <ImageView
         android:id="@+id/head"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_marginRight="10dp"
       android:src="@drawable/haoyue"
    />
        <TextView
            android:textSize="18sp"
            android:id="@+id/repair_id"
            android:layout_toRightOf="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2196F3"
            tools:text="191001:"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:id="@+id/repair_address"
            android:layout_toRightOf="@+id/repair_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:singleLine="true"
            tools:text="一楼行政部"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:id="@+id/repair_content"
            android:layout_toRightOf="@+id/repair_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:singleLine="true"
            tools:text="【笔记本1001】XXX"
            />
        <TextView
            android:textSize="18sp"
            android:id="@+id/check_group"
            android:layout_toRightOf="@+id/head"
            android:layout_below="@+id/repair_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="检修一组 巡检人：陈明"/>
        <TextView
            android:textSize="18sp"
            android:id="@+id/repair_time"
            android:layout_toRightOf="@+id/head"
            android:layout_below="@+id/check_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="10-23 14:20"/>
        <TextView
            android:textSize="16sp"
            android:id="@+id/repair_status"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/check_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            tools:text="已指派：张志明"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#dbdbdb" />
    </RelativeLayout>

</LinearLayout>