<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_selector"
                android:layout_gravity="center_vertical" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="服务商"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_facilities_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="#DDDDDD"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#dbdbdb" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_selector"
                android:layout_gravity="center_vertical" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="维修工"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_repairer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="#DDDDDD"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#dbdbdb" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_selector"
                android:layout_gravity="center_vertical" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="维修结果"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_repair_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="#DDDDDD"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#dbdbdb" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_selector"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="维修建议"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_fault_suggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="#DDDDDD"
                    android:textSize="14sp"
                    android:background="@null"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#dbdbdb" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_selector"
                android:layout_gravity="center_vertical" >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="是否更换"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_whether_replace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="#DDDDDD"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_choose_whether_replace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="请选择 >"
                    android:textColor="#1A73C0"
                    android:textSize="14sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#dbdbdb" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_selector"
                android:layout_gravity="center_vertical" >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="备件"
                    android:textColor="#353535"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_replacement_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="#DDDDDD"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/fragment_order_choose_replacement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="请添加 >"
                    android:textColor="#1A73C0"
                    android:textSize="14sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#dbdbdb" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/replace_title"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/deep_blue">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/state_selected"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:text="名称" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="fill_parent"
                        android:background="#B4B3B3"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:paddingBottom="10dp"
                        android:textColor="@color/state_selected"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="编号" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="fill_parent"
                        android:background="#B4B3B3"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/state_selected"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="数量" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="fill_parent"
                        android:background="#B4B3B3"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="10dip"
                        android:textColor="@color/state_selected"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:paddingTop="10dp"
                        android:gravity="center"
                        android:text="价格" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="fill_parent"
                        android:background="#B4B3B3"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:textColor="@color/state_selected"
                        android:paddingTop="10dp"
                        android:gravity="center"
                        android:text="金额" />

                </LinearLayout>
                <ListView
                    android:id="@+id/lv_replacement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="提交"
                android:id="@+id/choose_replacement_button"
                android:background="@color/deep_blue"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:visibility="gone"
                />
        </LinearLayout>
</LinearLayout>